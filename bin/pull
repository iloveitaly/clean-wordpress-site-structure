#!/bin/bash

cd `dirname $0`
cd ..

source ./bin/server

rsync -avr --exclude node_modules --exclude '.git' -e ssh $ssh_connection:~/html/wp-content/uploads/ $PWD/app/uploads

ssh $ssh_connection 'cd html && /usr/local/sbin/wp db export -' > tmp/remote_db.sql

if [ $? -eq 0 ]; then
	sed -i '' "s/\`$wp_prefix/\`wp_/g" tmp/remote_db.sql
	wp db import tmp/remote_db.sql
fi
